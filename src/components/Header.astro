---
import { SITE_TITLE } from '../consts';
import Dock from './Dock.astro';
---

<header>
	<nav>
		<h2 class="site-title">
			<a href="/">
				<svg class="cross-icon" viewBox="0 0 20 24" width="20" height="24" aria-hidden="true">
					<!-- Vertical line (longer) - pinstripe -->
					<rect x="9.5" y="2" width="1" height="20" fill="currentColor"/>
					<!-- Horizontal line (shorter, positioned in upper third) - pinstripe -->
					<rect x="2" y="9.5" width="16" height="1" fill="currentColor"/>
				</svg>
				{SITE_TITLE}
			</a>
		</h2>
	</nav>
</header>
<Dock />
<style>
	header {
		margin: 0;
		padding: 0;
		/* iOS 26 Safe Area: extend into status bar area */
		padding-top: env(safe-area-inset-top, 0);
		padding-left: env(safe-area-inset-left, 0);
		padding-right: env(safe-area-inset-right, 0);
		background: rgba(var(--white), 0.7);
		backdrop-filter: blur(12px) saturate(180%);
		-webkit-backdrop-filter: blur(12px) saturate(180%);
		border-bottom: 1px solid rgba(var(--gray-light), 0.3);
		position: sticky;
		top: 0;
		z-index: 100;
	}

	header h2,
	header .site-title {
		margin: 0;
		font-size: 1.5rem !important;
		font-weight: 200 !important;
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif !important;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
		text-rendering: optimizeLegibility;
	}

	header h2 a,
	header h2 a.active {
		text-decoration: none;
		color: rgb(var(--black));
		transition: color 0.2s ease;
		display: flex;
		align-items: center;
		gap: 0.25rem;
		font-size: inherit;
	}

	h2 a:hover {
		color: var(--accent);
	}

	.cross-icon {
		flex-shrink: 0;
		opacity: 0.8;
		transition: opacity 0.2s ease;
		transform: rotate(30deg);
	}

	h2 a:hover .cross-icon {
		opacity: 1;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: center;
		max-width: 720px;
		margin: 0 auto;
		padding: 1.25rem 1.5rem;
	}

	@media (max-width: 720px) {
		nav {
			padding: 1rem 1rem;
		}

		header h2,
		header .site-title {
			font-size: 1.25rem !important;
		}
	}
</style>
